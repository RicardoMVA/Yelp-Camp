<% include ../partials/header.ejs %>

<div class="row form-background">

	<div class="col-md-12 text-center">
		<h1>Edit Comment</h1>
	</div>

	<div class="container form">
		<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<label for="comment">Comment</label>
				<input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
			</div>

			<div class="form-group text-center">
				<button class="btn btn-lg btn-success">Submit!</button>
			</div>
		</form>

		<a href="/campgrounds">Go Back to Campgrounds Page</a>

	</div>
</div>


