<!-- " .. " takes you one folder back -->
<% include ../partials/header.ejs %>


<header class="jumbotron">
	<div id="indexJumbotron">
		<h1><i class="fas fa-campground"></i> Welcome to YelpCamp!</h1>
		<p>View our hand-picked campgrounds from all over the world</p>

		<p>
			<form action="/campgrounds" method="GET" id="findForm">
				<input type="text" name="search" placeholder="Find campground" class="form-control mr-1">
				<input type="submit" value="Search" class="btn btn-outline-success">
			</form>
		</p>

		<p>
			<a class="btn btn-success btn-lg" href="/campgrounds/new">Add New Campground</a>
		</p>
	</div>
</header>

<div class="card-deck">
	<% campgrounds.forEach(function(campground){ %>
		<div class="col-lg-4 col-md-6 col-sm-12 mb-4">
			<div class="card">
				<img id="indexCardImg" class="card-img-top" src="images/campgrounds/<%= campground.image %>" alt="<%= campground.name %>">
				<div class="card-body" id="indexCardBody">
					<h4 class="card-title"><%= campground.name %></h4>
					<a href="/campgrounds/<%= campground._id %>" class="btn btn-success">More Info</a>
				</div>
			</div>
		</div>
	<% }); %>
</div>


<% include ../partials/footer.ejs %>